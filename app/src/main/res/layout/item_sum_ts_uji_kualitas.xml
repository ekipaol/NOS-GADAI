<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_data_hutang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_margin="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"
                    android:background="@color/endColorPrimary02">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:paddingLeft="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_r"
                            android:paddingBottom="2dp"
                            android:text="CIF"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp"/>

                        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                            android:id="@+id/et_jumlah_cif"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/endColorPrimary02"
                            app:prefix=""
                            app:prefixTextColor="@color/ms_white"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/ms_white"
                            android:fontFamily="@font/manrope_r" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="6dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="2dp"
                            android:fontFamily="@font/manrope_r"
                            android:text="Loan"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp"/>

                        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                            android:id="@+id/et_jumlah_loan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/endColorPrimary02"
                            app:prefix=""
                            app:prefixTextColor="@color/ms_white"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/ms_white"
                            android:fontFamily="@font/manrope_r" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="6dp"
                        android:paddingRight="8dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:paddingBottom="2dp"
                            android:lineSpacingExtra="2sp"
                            android:text="Out Standing"
                            android:textSize="14sp"
                            android:fontFamily="@font/manrope_r"
                            android:textColor="@color/colorWhite"/>

                        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                            android:id="@+id/et_total_standing"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/endColorPrimary02"
                            app:prefix="Rp "
                            app:prefixTextColor="@color/ms_white"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/ms_white"
                            android:fontFamily="@font/manrope_r"
                            android:inputType="number" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>