<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="20dp"
    app:cardElevation="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_info_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:padding="6dp">
            <TextView
                android:id="@+id/tv_nama_gadai"
                android:text="{Nama Gadai}"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/muli_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="2dp"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_info_pipeline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/ll_info_status"
            android:padding="6dp">
            <TextView
                android:id="@+id/tv_no_permohonan"
                android:text="{No Permohonan}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_tanggal_jam"
                android:layout_below="@+id/fr_image"
                android:text="{Tanggal Jam}"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textSize="12sp"
                android:textColor="#595959"/>

            <TextView
                android:id="@+id/tv_nominal"
                android:text="{Nominal}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:textSize="12sp"
                android:textColor="#595959"/>



        </LinearLayout>

        <Button
            android:id="@+id/btn_detail"
            android:layout_below="@+id/ll_info_status"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="Detail"
            android:textColor="#595959"
            android:textAllCaps="false"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/shapeborder"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>