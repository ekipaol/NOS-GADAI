<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_data_hutang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    android:layout_margin="12dp"
    app:cardElevation="20dp"
    app:cardBackgroundColor="@color/colorWhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kode Cabang"
                android:layout_weight="1"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_idCabangPemilik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{Kode Cabang}"
                android:textSize="13sp"
                android:textColor="@color/colorBlackHeader"
                android:layout_weight="1"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:paddingLeft="16dp">

                        <TextView
                            android:id="@+id/tv_nama_nasabah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="{Nama Nasabah}"
                            android:textColor="@color/colorBlackHeader"
                            android:fontFamily="@font/manrope_b"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:paddingBottom="2dp"/>
                        <TextView
                            android:id="@+id/tv_ld_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:text="{LD Number}"
                            android:fontFamily="@font/manrope_r"
                            android:textColor="@color/colorBlackHeader"
                            android:textSize="14sp"/>
                    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="120dp"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/bt_show"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:drawableStart="@drawable/ic_keyboard_arrow_down_slim_black_24dp" />

                <Button
                    android:id="@+id/bt_collapse"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:drawableStart="@drawable/ic_keyboard_arrow_up_slim_black_24dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_id_aplikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor Aplikasi Gadai"
                android:layout_weight="1"
                android:fontFamily="@font/manrope_r"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_nomor_applikasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{Nomor Aplikasi Gadai}"
                android:textAlignment="textEnd"
                android:fontFamily="@font/manrope_b"
                android:textSize="13sp"
                android:textColor="@color/colorBlackHeader"
                android:layout_weight="1"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_kode_slot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kode Slot"
                android:fontFamily="@font/manrope_r"
                android:layout_weight="1"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_kode_slot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{Kode Slot}"
                android:textAlignment="textEnd"
                android:fontFamily="@font/manrope_b"
                android:textSize="13sp"
                android:textColor="@color/colorBlackHeader"
                android:layout_weight="1"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_size_slot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Size Slot"
                android:fontFamily="@font/manrope_r"
                android:layout_weight="1"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_size_slot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{size Slot}"
                android:textAlignment="textEnd"
                android:fontFamily="@font/manrope_b"
                android:textSize="13sp"
                android:textColor="@color/colorBlackHeader"
                android:layout_weight="1"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tanggal_pencairan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Pencairan"
                android:fontFamily="@font/manrope_r"
                android:layout_weight="1"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_tgl_pencairan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{Tanggal Pencairan}"
                android:textAlignment="textEnd"
                android:fontFamily="@font/manrope_b"
                android:textSize="13sp"
                android:textColor="@color/colorBlackHeader"
                android:layout_weight="1"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tanggal_jatuh_tempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Jatuh Tempo"
                android:layout_weight="1"
                android:fontFamily="@font/manrope_r"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_tgl_jatuh_tempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{ Tanggal Jatuh Tempo }"
                android:textAlignment="textEnd"
                android:textSize="13sp"
                android:textColor="@color/colorBlackHeader"
                android:fontFamily="@font/manrope_b"
                android:layout_weight="1"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_status_opname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status Opname"
                android:layout_weight="1"
                android:fontFamily="@font/manrope_r"
                android:textSize="12sp"
                android:layout_gravity="center"/>

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/tf_opname"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_weight="1"
                app:endIcon="@drawable/ic_keyboard_arrow_down_slim_black_24dp"
                app:isResponsiveIconColor="true"
                app:labelText=""
                app:panelBackgroundColor="@color/colorWhite"
                app:primaryColor="@color/colorWhite"
                app:secondaryColor="@color/colorWhite"
                app:useDenseSpacing="true">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/et_opname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/manrope_r"
                    android:inputType="text"
                    android:text="Tidak Ada"
                    android:textAlignment="textEnd"
                    android:textStyle="bold" />
            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
