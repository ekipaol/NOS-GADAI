<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundCore">

    <include layout="@layout/toolbar_regular_new" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="170dp"
        android:background="@color/colorBackgroundCore">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/ms_white"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            android:gravity="start"
                            android:padding="12dp"
                            android:text="Performance"
                            android:textColor="@color/colorBlackHeader"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_summary_pencairan"
                                android:layout_width="0dp"
                                android:layout_weight="30"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginVertical="5dp"
                                android:textColorHint="@color/ms_black_87_opacity"
                                android:background="@drawable/shapegrey"
                                android:hint="Summary\nPencairan"
                                android:inputType="text"
                                android:padding="10dp"
                                android:textColor="#000"
                                android:textSize="15sp"
                                tools:ignore="NestedWeights" />


                            <TextView
                                android:id="@+id/tv_summary_perpanjangan"
                                android:layout_width="0dp"
                                android:layout_weight="30"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginVertical="5dp"
                                android:textColorHint="@color/ms_black_87_opacity"
                                android:background="@drawable/shapegrey"
                                android:hint="Summary\nPerpanjangan"
                                android:inputType="text"
                                android:padding="10dp"
                                android:textColor="#000"
                                android:textSize="15sp" />


                            <TextView
                                android:id="@+id/tv_summary_pelunasan"
                                android:layout_width="0dp"
                                android:layout_weight="30"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginVertical="5dp"
                                android:textColorHint="@color/ms_black_87_opacity"
                                android:background="@drawable/shapegrey"
                                android:hint="Summary\nPelunasan"
                                android:inputType="text"
                                android:fontFamily="@font/manrope_r"
                                android:padding="10dp"
                                android:textColor="#000"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_summary_program"
                                android:layout_width="0dp"
                                android:layout_weight="30"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginVertical="5dp"
                                android:textColorHint="@color/ms_black_87_opacity"
                                android:background="@drawable/shapegrey"
                                android:hint="Summary\nProgram"
                                android:inputType="text"
                                android:padding="10dp"
                                android:textColor="#000"
                                android:textSize="15sp"
                                tools:ignore="NestedWeights" />


                            <TextView
                                android:id="@+id/tv_summary_topup_bsim"
                                android:layout_width="0dp"
                                android:layout_weight="30"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginVertical="5dp"
                                android:textColorHint="@color/ms_black_87_opacity"
                                android:background="@drawable/shapegrey"
                                android:hint="Summary \nTop Up BSIM"
                                android:inputType="text"
                                android:padding="10dp"
                                android:textColor="#000"
                                android:textSize="15sp" />


                            <TextView
                                android:id="@+id/tv_kosong"
                                android:layout_width="0dp"
                                android:layout_weight="30"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginVertical="5dp"
                                android:inputType="text"
                                android:fontFamily="@font/manrope_r"
                                android:padding="10dp"
                                android:textColor="#000"
                                android:textSize="15sp" />

                        </LinearLayout>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/ms_white"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            android:gravity="start"
                            android:padding="12dp"
                            android:text="Postdue"
                            android:textColor="@color/colorBlackHeader"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="100"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_postdue"
                                android:layout_width="0dp"
                                android:layout_weight="30"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginVertical="5dp"
                                android:textColorHint="@color/ms_black_87_opacity"
                                android:background="@drawable/shapegrey"
                                android:hint="Postdue"
                                android:inputType="text"
                                android:padding="10dp"
                                android:textColor="#000"
                                android:textSize="15sp"
                                tools:ignore="NestedWeights" />
                            <TextView
                                android:id="@+id/tv_kosong2"
                                android:layout_width="0dp"
                                android:layout_weight="30"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginVertical="5dp"
                                android:inputType="text"
                                android:fontFamily="@font/manrope_r"
                                android:padding="10dp"
                                android:textColor="#000"
                                android:textSize="15sp" />
                            <TextView
                                android:id="@+id/tv_kosong3"
                                android:layout_width="0dp"
                                android:layout_weight="30"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginVertical="5dp"
                                android:inputType="text"
                                android:fontFamily="@font/manrope_r"
                                android:padding="10dp"
                                android:textColor="#000"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/ms_white"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:paddingHorizontal="10dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            android:gravity="start"
                            android:padding="12dp"
                            android:text="Uji Kualitas"
                            android:textColor="@color/colorBlackHeader"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_belum_uji_kualitas"
                                android:layout_width="0dp"
                                android:layout_weight="30"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginVertical="5dp"
                                android:textColorHint="@color/ms_black_87_opacity"
                                android:background="@drawable/shapegrey"
                                android:hint="Belum Uji\nKualiatas"
                                android:inputType="text"
                                android:padding="10dp"
                                android:textColor="#000"
                                android:textSize="15sp"
                                tools:ignore="NestedWeights" />


                            <TextView
                                android:id="@+id/tv_uji_kualitas_tidak_sesuai"
                                android:layout_width="0dp"
                                android:layout_weight="30"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginVertical="5dp"
                                android:textColorHint="@color/ms_black_87_opacity"
                                android:background="@drawable/shapegrey"
                                android:hint="Uji Kualitas \nTidak Sesuai"
                                android:inputType="text"
                                android:padding="10dp"
                                android:textColor="#000"
                                android:textSize="15sp" />


                            <TextView
                                android:id="@+id/tv_kosong4"
                                android:layout_width="0dp"
                                android:layout_weight="30"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginVertical="5dp"
                                android:inputType="text"
                                android:fontFamily="@font/manrope_r"
                                android:padding="10dp"
                                android:textColor="#000"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>