<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_data_hutang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_margin="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/tv_nama_nasabah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingTop="5dp"
                android:fontFamily="@font/manrope_b"
                android:lineSpacingExtra="2sp"
                android:text="{Nama Nasabah}"
                android:textColor="@color/colorBlackHeader"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_nomor_aplikasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingTop="7dp"
                android:fontFamily="@font/manrope_r"
                android:lineSpacingExtra="2sp"
                android:text="{Nomor Aplikasi}"
                android:textColor="@color/colorBlackHeader"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/bt_show"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:visibility="visible"
                android:drawableStart="@drawable/ic_keyboard_arrow_down_black_24dp" />

            <Button
                android:id="@+id/bt_collapse"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:drawableStart="@drawable/ic_keyboard_arrow_up_black_24dp" />

        </LinearLayout>
    </LinearLayout>

        <View
            android:id="@+id/v_pastdue"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/straight_line"
            android:backgroundTint="@color/colorBackgroundCore"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layerType="software"/>


        <LinearLayout
            android:id="@+id/ll_tgl_jatuh_tempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_r"
                android:lineSpacingExtra="2sp"
                android:layout_weight="1"
                android:text="Tanggal Jatuh Tempo"
                android:textColor="@color/colorBlackHeader"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_tanggal_jatuh_tempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/manrope_b"
                android:gravity="end"
                android:lineSpacingExtra="2sp"
                android:text="{Tanggal Jatuh Tempo}"
                android:textColor="@color/colorBlackHeader"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rv_pastdue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/endColorPrimary02"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_r"
                            android:paddingBottom="2dp"
                            android:text="Pokok"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp" />

                        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                            android:id="@+id/et_biaya_pokok"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/endColorPrimary02"
                            android:fontFamily="@font/manrope_r"
                            android:inputType="number"
                            android:textColor="@color/ms_white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:prefix="Rp. "
                            app:prefixTextColor="@color/ms_white" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_r"
                            android:paddingBottom="2dp"
                            android:text="Biaya Pemiliharaan"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp" />

                        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                            android:id="@+id/et_biaya_pemeliharaan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/endColorPrimary02"
                            android:fontFamily="@font/manrope_r"
                            android:inputType="number"
                            android:textColor="@color/ms_white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:prefix="Rp. "
                            app:prefixTextColor="@color/ms_white" />

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>