<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_data_hutang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_margin="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_perpanjangan_gagal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:background="@color/endColorPrimary02">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="16dp"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/manrope_r"
                                android:paddingBottom="2dp"
                                android:text="Belum Simulasi"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/tv_belum_simulasi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/manrope_b"
                                android:paddingBottom="2dp"
                                android:text="{Belum Simulasi}"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="10dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="2dp"
                                android:fontFamily="@font/manrope_r"
                                android:text="Belum Direview"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/tv_belum_direview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="2dp"
                                android:fontFamily="@font/manrope_b"
                                android:text="{Belum Direview}"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:background="@color/endColorPrimary02">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="16dp"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/manrope_r"
                                android:paddingBottom="2dp"
                                android:text="Belum Pemutusan"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/tv_belum_pemutusan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/manrope_b"
                                android:paddingBottom="2dp"
                                android:text="{Belum Pemutusan}"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="10dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="2dp"
                                android:fontFamily="@font/manrope_r"
                                android:text="Pengembalian Agunan"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/tv_pengembalian_agunan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="2dp"
                                android:fontFamily="@font/manrope_b"
                                android:text="{Pengembalian Agunan}"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:background="@color/endColorPrimary02">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="16dp"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/manrope_r"
                                android:paddingBottom="2dp"
                                android:text="Belum Otorisasi"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/tv_belum_otorisasi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/manrope_b"
                                android:paddingBottom="2dp"
                                android:text="{Belum Otorisasi}"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="10dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="2dp"
                                android:fontFamily="@font/manrope_r"
                                android:text="Blokir Saldo Rekening"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/tv_blokir_saldo_rekening"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="2dp"
                                android:fontFamily="@font/manrope_b"
                                android:text="{Blokir Saldo Rekening}"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:background="@color/endColorPrimary02">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="16dp"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/manrope_r"
                                android:paddingBottom="2dp"
                                android:text="Pencairan"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/tv_pencairan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/manrope_b"
                                android:paddingBottom="2dp"
                                android:text="{Pencairan}"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="10dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="2dp"
                                android:fontFamily="@font/manrope_r"
                                android:text="Pelunasan"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/tv_pelunasan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="2dp"
                                android:fontFamily="@font/manrope_b"
                                android:text="{Pelunasan}"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:background="@color/endColorPrimary02">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="10dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="2dp"
                                android:fontFamily="@font/manrope_r"
                                android:text="Release Saldo Rekening"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/tv_release_saldo_rekening"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="2dp"
                                android:fontFamily="@font/manrope_b"
                                android:text="{Release Saldo Rekening}"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.cardview.widget.CardView>